let tareas = JSON.parse(localStorage.getItem("tareas"));
if (tareas == null) tareas = [];

let tabla = document.querySelector('#tareas')
function llenar() {
    let contenidoTabla = '<tr><th>Materia</th><th>Descripci贸n</th><th>Fecha</th><th></th></tr>'
    for (tarea of tareas){
        contenidoTabla = contenidoTabla + `<tr><td>${tarea.Materia}</td><td>${tarea.Descripci贸n}</td>
        <td>${tarea.fecha}</td></tr>`
    }
    tabla.innerHTML = contenidoTabla;
}
llenar();
